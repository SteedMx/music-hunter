.Contact
  width 100%

  display block
  margin 0 auto
  padding 0

  &Container
    white-space nowrap
    width 1200px

    display block
    margin 0 auto
    padding 2rem 0

  &Header
    display block
    text-align center

  &Title
    border-bottom 4px solid $primary-red
    font-size 2rem

    display inline-block
    margin-bottom 3rem

  &Segment
    box-sizing border-box
    width 50%

    display inline-block
    margin 0
    padding 0
    vertical-align top

  &Form
    width 100%

    margin 0
    padding 0

  &Input
  &Textarea
  &Submit
    box-sizing border-box
    width 100%

    display block
    margin 1rem 0
    padding 1rem

  &Input
    &:first-child
      margin-top 0

  &Submit
    background-color $primary-red
    border none
    color $primary-white
    font-weight bold

    padding 0.75rem

  &Text
    margin 0
    line-height 1.5
